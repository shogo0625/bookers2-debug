	<div class="col-xs-12">
		<% if @model == 'user' %>
			<h3>Users search for <%= %Q!"#{@content}"! %></h3>
		<% else %>
			<h3>Books search for <%= %Q!"#{@content}"! %></h3>
		<% end %>
		<!--users一覧 -->
		<table class="table">
			<thead>
				<tr>
					<th>image</th>
					<th>name</th>
					<th colspan="4"></th>
				</tr>
			</thead>

			<tbody>
				<% if @model == 'user' %>
					<% @datas.each do |user| %>
					<tr>
						<td><%= attachment_image_tag(user, :profile_image, :fill, 50, 50, fallback: "no-image-mini.jpg") %></td>
						<td><%= user.name%></td>
						<td>フォロー数：<%= user.following_user.count %></td>
						<td>フォロワー数：<%= user.follower_user.count %></td>
						<% if user.id != current_user.id %>
							<% if current_user.following?(user) %>
								<td><%= link_to "フォロー外す", unfollow_path(user), method: :delete %></td>
							<% else %>
								<td><%= link_to "フォローする", follow_path(user), method: :post %></td>
							<% end %>
						<% else %>
							<td></td>
						<% end %>
						<td><%= link_to "Show", user, class: "user_#{user.id}" %></td>
					</tr>
					<% end %>
				<% else %>
					<% @datas.each do |book| %>
					<tr>
						<td>
							<%= link_to user_path(book.user) do %>
							<%= attachment_image_tag(book.user, :profile_image, :fill, 50, 50, fallback: "no-image-mini.jpg") %>
							<% end %>
						</td>
						<td><%= link_to book.title, book, class: "book_#{book.id}" %></td>
						<td><%= book.body %></td>
						<% if book.favorited_by?(current_user) %>
							<td>
								<%= link_to book_favorites_path(book), method: :delete do %>
									<i class="fa fa-heart" aria-hidden="true" style="color: red;"></i>
								<% end %>
								<%= book.favorites.count %>
							</td>
						<% else %>
							<td>
								<%= link_to book_favorites_path(book), method: :post do %>
									<i class="fa fa-heart" aria-hidden="true"></i>
								<% end %>
								<%= book.favorites.count %>
							</td>
						<% end %>
						<td>コメント数：<%= book.book_comments.count %></td>
					</tr>
					<% end %>
				<% end %>
			</tbody>
		</table>
		<!--users一覧 -->
	</div>
